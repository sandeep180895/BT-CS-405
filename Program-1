#include<iostream>

#include<conio.h>
using namespace std;
class matrix
{
 int a,b;
int A[3][3];

 public:
  void readmatrix();
  void displaymatrix();

};
void matrix::readmatrix()
{ cout<<"enter elements of matrix";
 for(int i=1;i<=3;i++)
{
 for(int j=1;j<=3;j++){
  	cin>>A[i][j];}
}
}
void matrix::displaymatrix()
{  cout<<"matrix is "<<endl;
 for(int i=1;i<=3;i++)
 {
  for(int j=1;j<=3;j++)
  {
cout<<" "<<A[i][j];
  }
 cout<<endl; }
}
int main()
{matrix m;
 m.readmatrix();
m.displaymatrix();
 return(0);
}
